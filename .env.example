
WHAPI_TOKEN=
WHATSAPP_CHANNEL_ID=

MCP_SERVER_URL=

# AI Provider Configuration
AI_PROVIDER=gemini  # Options: 'gemini' or 'openai'

# OpenAI Configuration (for fallback or primary)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini AI Configuration
GEMINI_API_KEY=

# Server Configuration
PORT=

# Agent Configuration
# Number of messages to keep in history per user (system AND user)
AGENT_HISTORY_LIMIT=5
#  in hours
AGENT_CLEANUP_INTERVAL_HOURS=1
AGENT_HISTORY_EXPIRY_HOURS=3

BRAVE_SEARCH_API_KEY=your_real_brave_api_key_here

# LangChain Configuration
LANGCHAIN_DEFAULT_MODEL=gemini
LANGCHAIN_FALLBACK_MODEL=openai
LANGCHAIN_MEMORY_TYPE=conversation
LANGCHAIN_MAX_TOKENS=4000
LANGCHAIN_MEMORY_EXPIRY_HOURS=24

# Tool Configuration
LANGCHAIN_ENABLED_TOOLS=mcp,brave_search
LANGCHAIN_TOOL_TIMEOUT=30000
LANGCHAIN_MAX_TOOL_CALLS=5

# Intent Detection Configuration
LANGCHAIN_INTENT_CONFIDENCE_THRESHOLD=0.7
LANGCHAIN_DEFAULT_INTENT=general_chat

# Performance Configuration
LANGCHAIN_ENABLE_TRACING=false
LANGCHAIN_ENABLE_METRICS=true
LANGCHAIN_CACHE_ENABLED=true

# Prompt Configuration (optional)
# LANGCHAIN_SYSTEM_PROMPT_PATH=./prompts/system.txt
