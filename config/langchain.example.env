# LangChain Integration Configuration
# Copy this file to .env and update the values

# ===== LANGCHAIN CORE CONFIGURATION =====
# Enable LangChain integration (set to false to use legacy agents)
USE_LANGCHAIN=true

# Default AI model (gemini or openai)
LANGCHAIN_DEFAULT_MODEL=gemini

# Fallback AI model (gemini or openai)
LANGCHAIN_FALLBACK_MODEL=openai

# Memory type (buffer, summary, or conversation)
LANGCHAIN_MEMORY_TYPE=conversation

# Maximum tokens for model responses
LANGCHAIN_MAX_TOKENS=4000

# Memory expiry time in hours
LANGCHAIN_MEMORY_EXPIRY_HOURS=24

# ===== API KEYS =====
# Gemini API Key (required if using Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Brave Search API Key (required for web search)
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# ===== TOOL CONFIGURATION =====
# Enabled tools (comma-separated: mcp,brave_search)
LANGCHAIN_ENABLED_TOOLS=mcp,brave_search

# Tool execution timeout in milliseconds
LANGCHAIN_TOOL_TIMEOUT=30000

# Maximum tool calls per execution
LANGCHAIN_MAX_TOOL_CALLS=5

# ===== MCP CONFIGURATION =====
# MCP Server URL
MCP_SERVER_URL=http://localhost:3001

# ===== PERFORMANCE CONFIGURATION =====
# Enable tracing for debugging
LANGCHAIN_ENABLE_TRACING=false

# Enable metrics collection
LANGCHAIN_ENABLE_METRICS=true

# Enable caching
LANGCHAIN_CACHE_ENABLED=true

# ===== PROMPT CONFIGURATION =====
# Path to system prompt file (optional)
LANGCHAIN_SYSTEM_PROMPT_PATH=./config/prompts/system.txt

# Path to prompt templates directory (optional)
LANGCHAIN_PROMPT_TEMPLATES_PATH=./config/prompts/templates/

# ===== INTENT DETECTION CONFIGURATION =====
# Intent confidence threshold (0.0 to 1.0)
LANGCHAIN_INTENT_CONFIDENCE_THRESHOLD=0.7

# Default intent when detection fails
LANGCHAIN_DEFAULT_INTENT=general_chat

# ===== LEGACY CONFIGURATION (for fallback) =====
# Primary AI provider for legacy agents (gemini or openai)
AI_PROVIDER=gemini

# ===== WHATSAPP CONFIGURATION =====
# WhatsApp API configuration (existing)
WHAPI_TOKEN=your_whapi_token_here
WHAPI_BASE_URL=https://gate.whapi.cloud